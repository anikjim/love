    <script>
        // Mobile Menu Toggle
        const mobileMenu = document.querySelector('.mobile-menu');
        const navLinks = document.querySelector('.nav-links');
        
        mobileMenu.addEventListener('click', () => {
            navLinks.classList.toggle('active');
            mobileMenu.querySelector('i').classList.toggle('fa-bars');
            mobileMenu.querySelector('i').classList.toggle('fa-times');
        });
        
        // Close mobile menu when clicking on a link
        document.querySelectorAll('.nav-links a').forEach(link => {
            link.addEventListener('click', () => {
                navLinks.classList.remove('active');
                mobileMenu.querySelector('i').classList.add('fa-bars');
                mobileMenu.querySelector('i').classList.remove('fa-times');
            });
        });
        
        // Header scroll effect
        window.addEventListener('scroll', () => {
            const header = document.getElementById('header');
            if (window.scrollY > 100) {
                header.classList.add('scrolled');
            } else {
                header.classList.remove('scrolled');
            }
        });
        
        // Daily Challenge Generator
        const challenges = [
            "Send a heartfelt thank you message to someone who has positively impacted your life.",
            "Compliment three strangers sincerely today.",
            "Spend 15 minutes in nature without any digital devices.",
            "Forgive yourself for one mistake you've been holding onto.",
            "Perform a random act of kindness without expecting anything in return.",
            "Write down three things you love about yourself and place the note where you'll see it daily.",
            "Listen actively to someone without interrupting or offering advice.",
            "Donate to a cause that aligns with your values.",
            "Cook a healthy meal for yourself or someone you care about.",
            "Write a letter of gratitude to someone who has helped you.",
            "Meditate for 10 minutes focusing on sending love to yourself and others.",
            "Let go of a grudge you've been holding and wish that person well."
        ];
        
        const challengeButton = document.getElementById('get-challenge');
        const challengeText = document.getElementById('challenge-text');
        
        challengeButton.addEventListener('click', () => {
            const randomIndex = Math.floor(Math.random() * challenges.length);
            challengeText.textContent = challenges[randomIndex];
            
            // Add a subtle animation
            challengeText.style.opacity = '0';
            setTimeout(() => {
                challengeText.style.opacity = '1';
                challengeText.style.transition = 'opacity 0.5s ease';
            }, 300);
        });
        
        // Email form submission
        const emailForm = document.querySelector('.email-form');
        emailForm.addEventListener('submit', (e) => {
            e.preventDefault();
            const emailInput = document.querySelector('.email-input');
            alert(`Thank you for joining our love community! We've sent a confirmation to ${emailInput.value}`);
            emailInput.value = '';
        });
        
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                
                const targetId = this.getAttribute('href');
                if (targetId === '#') return;
                
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    window.scrollTo({
                        top: targetElement.offsetTop - 80,
                        behavior: 'smooth'
                    });
                }
            });
        });
    </script>
